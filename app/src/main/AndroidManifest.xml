<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">

        <!-- SplashActivity ahora es la actividad principal -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Las demÃ¡s actividades siguen igual -->
        <activity
            android:name="view.PedidosActivity"
            android:exported="false" />
        <activity
            android:name="view.RegistrarPedidoActivity"
            android:exported="false" />
        <activity
            android:name="view.RegisterProductActivity"
            android:exported="false" />
        <activity
            android:name="view.OrderDetailsActivity"
            android:exported="false" />
        <activity
            android:name="view.InsertarClienteActivity"
            android:exported="false" />
        <activity
            android:name="view.MainActivity"
            android:exported="true"
            android:theme="@style/AppTheme.NoActionBar">
            <!-- Esta actividad ya no es la principal -->
        </activity>
    </application>

</manifest>
